<body>
  <div class="water-background"></div>
  <button class="clear-snow" onclick="clearSnow()">Schnee räumen</button>
  <button class="clear-snow" onclick="fastForwardSnow()">Vorspulen</button>
  <button class="close-menu-aside" onclick="toggleMenuAside()">Schließen</button>

  <header>
    <h1>Weihnachts-Website</h1>
    <button type="button" onclick="toggleMenu()">Menü</button>
    <button type="button" onclick="toggleAside()">Aside</button>
  </header>
  <nav>
    <ul>
      <li><a href="#">Geschenk 1</a></li>
      <li><a href="#">Geschenk 2</a></li>
      <li><a href="#">Geschenk 3</a></li>
    </ul>
  </nav>
  <aside>
    <p>Hier könnten Weihnachtswünsche stehen!</p>
  </aside>
  <main>
    <p>Frohe Weihnachten! Hier ist der festliche Inhalt der Website.</p>
    <button onclick="openGift()">Geschenk öffnen</button>
    <div id="giftResult"></div>
  </main>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const snowflakesContainer = document.body;
      const waterBackground = document.querySelector('.water-background');
      const maxSnowflakes = 250;
      let snowflakesCount = 0;
      let waterLevel = 0;

      setInterval(createSnowflake, 500); // Fügt alle 0.5 Sekunden eine Schneeflocke hinzu

            function createSnowflake() {
        if (snowflakesCount < maxSnowflakes) {
          const snowflake = document.createElement("div");
          snowflake.classList.add("snowflake");
          snowflake.style.left = `${Math.random() * 100}vw`;
          snowflake.style.animationDuration = `${Math.random() * 3 + 1}s`;
          snowflakesContainer.appendChild(snowflake);

          // Erhöhe den Wasserpegel basierend auf der Anzahl der Schneeflocken
          waterLevel += 0.5;
          waterBackground.style.height = `${waterLevel}vh`;

          snowflakesCount++;
        }
      }
    });

    function toggleMenu() {
      var nav = document.querySelector("nav");
      nav.style.display = (nav.style.display === "block") ? "none" : "block";
    }

    function toggleAside() {
      var aside = document.querySelector("aside");
      aside.style.display = (aside.style.display === "block") ? "none" : "block";
    }

    function toggleMenuAside() {
      var nav = document.querySelector("nav");
      var aside = document.querySelector("aside");
      nav.style.display = "none";
      aside.style.display = "none";
    }

    function clearSnow() {
      const snowflakesContainer = document.body;
      const snowflakes = document.querySelectorAll(".snowflake");
      snowflakes.forEach((snowflake) => {
        snowflakesContainer.removeChild(snowflake);
      });
      snowflakesCount = 0;

      // Setze den Wasserpegel zurück
      waterLevel = 0;
      waterBackground.style.height = `${waterLevel}vh`;
    }

    function fastForwardSnow() {
      // Füge schnell mehrere Schneeflocken hinzu
      for (let i = 0; i < 50; i++) {
        createSnowflake();
      }
 function openGift() {
      const giftResult = document.getElementById('giftResult');
      const randomNum = Math.random();

      if (randomNum < 0.3) {
        giftResult.innerHTML = '<p>Glückwunsch! Du hast ein tolles Geschenk erhalten!</p>';
      } else if (randomNum < 0.6) {
        giftResult.innerHTML = '<p>Nicht schlecht! Ein weiteres Geschenk für dich!</p>';
      } else {
        giftResult.innerHTML = '<p>Leider war es nur virtuell. Besser Glück beim nächsten Mal!</p>';
      }
    }
    }
  </script>
</body>
</html>

